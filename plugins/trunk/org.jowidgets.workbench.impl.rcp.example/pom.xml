<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.jowidgets</groupId>
		<artifactId>org.jowidgets.plugins.parent</artifactId>
		<version>0.4.0-SNAPSHOT</version>
		<relativePath>../parent/pom.xml</relativePath>
	</parent>
	<artifactId>org.jowidgets.workbench.impl.rcp.example</artifactId>
	<name>org.jowidgets.workbench.impl.rcp.example</name>
	<packaging>eclipse-plugin</packaging>

	<dependencies>
		<dependency>
			<groupId>org.jowidgets</groupId>
			<artifactId>org.jowidgets.examples.common</artifactId>
			<version>${jo-widgets.version}</version>
		</dependency>
		<dependency>
			<groupId>org.jowidgets</groupId>
			<artifactId>org.jowidgets.impl</artifactId>
			<version>${jo-widgets.version}</version>
		</dependency>
		<dependency>
            <groupId>org.jowidgets</groupId>
            <artifactId>org.jowidgets.workbench.tools</artifactId>
            <version>${jo-widgets.version}</version>
        </dependency>
		<dependency>
            <groupId>org.jowidgets</groupId>
            <artifactId>org.jowidgets.workbench.toolkit.api</artifactId>
            <version>${jo-widgets.version}</version>
        </dependency>
		<dependency>
			<groupId>org.jowidgets</groupId>
			<artifactId>org.jowidgets.spi.impl.swt</artifactId>
			<version>${jo-widgets.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.3</version>
				<executions>
					<execution>
						<id>copy-embedded-jars</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>com.miglayout</groupId>
									<artifactId>miglayout</artifactId>
									<version>3.7.3.1</version>
									<classifier>swt</classifier>
									<outputDirectory>${basedir}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.easymock</groupId>
									<artifactId>easymock</artifactId>
									<version>3.0</version>
									<outputDirectory>${basedir}</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
