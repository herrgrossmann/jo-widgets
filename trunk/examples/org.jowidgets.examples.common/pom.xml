<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>org.jowidgets.examples.common</artifactId>

	<parent>
		<groupId>org.jowidgets</groupId>
		<artifactId>org.jowidgets.examples.parent</artifactId>
		<version>0.21.0-SNAPSHOT</version>
		<relativePath>../parent/pom.xml</relativePath>
	</parent>

	<dependencies>
	    <dependency>
            <groupId>org.jowidgets</groupId>
            <artifactId>org.jowidgets.addons.icons.silkicons</artifactId>
            <version>0.21.0-SNAPSHOT</version>
        </dependency>
		<dependency>
			<groupId>org.jowidgets</groupId>
			<artifactId>org.jowidgets.tools</artifactId>
			<version>0.21.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.jowidgets</groupId>
			<artifactId>org.jowidgets.workbench.tools</artifactId>
			<version>0.21.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.jowidgets</groupId>
			<artifactId>org.jowidgets.addons.map.common</artifactId>
			<version>0.21.0-SNAPSHOT</version>
		</dependency>
		<dependency>
            <groupId>org.jowidgets</groupId>
            <artifactId>org.jowidgets.addons.widgets.browser.api</artifactId>
            <version>0.21.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.jowidgets</groupId>
            <artifactId>org.jowidgets.addons.widgets.download.api</artifactId>
            <version>0.21.0-SNAPSHOT</version>
        </dependency>
		<dependency>
            <groupId>org.jowidgets</groupId>
            <artifactId>org.jowidgets.addons.widgets.ole.api</artifactId>
            <version>0.21.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.jowidgets</groupId>
            <artifactId>org.jowidgets.addons.widgets.office.api</artifactId>
            <version>0.21.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.jowidgets</groupId>
            <artifactId>org.jowidgets.addons.widgets.office.impl.ole</artifactId>
            <version>0.21.0-SNAPSHOT</version>
        </dependency>
		<dependency>
			<groupId>org.jowidgets</groupId>
			<artifactId>org.jowidgets.impl</artifactId>
			<version>0.21.0-SNAPSHOT</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.jowidgets</groupId>
			<artifactId>org.jowidgets.spi.impl.dummy</artifactId>
			<version>0.21.0-SNAPSHOT</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.3.1</version>
				<configuration>
					<archive>
						<manifestFile>META-INF/MANIFEST.MF</manifestFile>
					</archive>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.1.0</version>
				<executions>
					<execution>
						<id>bundle-manifest</id>
						<phase>process-classes</phase>
						<goals>
							<goal>manifest</goal>
						</goals>
						<configuration>
							<manifestLocation>META-INF</manifestLocation>
							<instructions>
								<Export-Package>org.jowidgets.examples.common.*</Export-Package>
								<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
								<Require-Bundle>org.jowidgets.workbench.tools</Require-Bundle>
								<Require-Bundle>org.jowidgets.workbench.toolkit.api</Require-Bundle>
							</instructions>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
