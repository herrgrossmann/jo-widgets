<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<artifactId>org.jowidgets.features.parent</artifactId>
	<packaging>pom</packaging>

	<parent>
		<groupId>org.jowidgets</groupId>
		<artifactId>org.jowidgets.parent</artifactId>
		<version>0.26.0-SNAPSHOT</version>
		<relativePath>../../parent/pom.xml</relativePath>
	</parent>
	
	<properties>
		<tycho-version>0.16.0</tycho-version>
		<tycho-provider>org.eclipse.tycho</tycho-provider>
	</properties>
	
	<repositories>
	
		<repository>
			<id>juno</id>
			<url>http://download.eclipse.org/releases/juno</url>
			<layout>p2</layout>
		</repository>
		
		<repository>
			<id>rap-2.0</id>
			<url>http://download.eclipse.org/rt/rap/2.0</url>
			<layout>p2</layout>
		</repository>
		
		<repository>
			<id>rap-1.4</id>
			<url>http://download.eclipse.org/rt/rap/1.4/runtime</url>
			<layout>p2</layout>
		</repository>
		
	</repositories>
	
	<dependencies>
		<!-- THIRD PARTY -->
		<dependency>
			<groupId>net.miginfocom.miglayout</groupId>
			<artifactId>net.miginfocom.miglayout.swt.bundle</artifactId>
			<version>3.7.3.1</version>
		</dependency>
		
		<dependency>
			<groupId>net.miginfocom.miglayout</groupId>
			<artifactId>net.miginfocom.miglayout.swing.bundle</artifactId>
			<version>3.7.3.1</version>
		</dependency>
		
		<dependency>
			<groupId>de.micromata.jak</groupId>
			<artifactId>de.micromata.jak.JavaAPIforKml.bundle</artifactId>
			<version>2.2.0</version>
		</dependency>
		
	</dependencies>

	<modules>
	    <module>../org.jowidgets.core.feature</module>
		<module>../org.jowidgets.addons.feature</module>
		<module>../org.jowidgets.thirdparty.feature</module>
	</modules>
	
	<build>
		<plugins>
			<plugin>
				<groupId>${tycho-provider}</groupId>
				<artifactId>tycho-packaging-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<deployableFeature>true</deployableFeature>
				</configuration>
			</plugin>
			<plugin>
				<groupId>${tycho-provider}</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>${tycho-provider}</groupId>
				<artifactId>tycho-p2-repository-plugin</artifactId>
				<version>${tycho-version}</version>
			</plugin>
			<plugin>
				<groupId>${tycho-provider}</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<pomDependencies>consider</pomDependencies>
					<environments><!-- required for testing on Jenkins -->
						<environment>
							<ws>win32</ws>
							<os>win32</os>
							<arch>x86</arch>
						</environment>
						<environment>
							<ws>gtk</ws>
							<os>linux</os>
							<arch>x86_64</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-source-plugin</artifactId>
				<version>${tycho-version}</version>
				<executions>
					<execution>
						<id>plugin-source</id>
						<goals>
							<goal>plugin-source</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
		</plugins>
	</build>

</project>